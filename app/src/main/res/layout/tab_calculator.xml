<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.enveloper.converter.CalculatorTab">

    <LinearLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        app:layout_heightPercent="45%"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/black">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:padding="10dp"
            android:textColor="@color/darker_text"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="55%"
        android:layout_below="@+id/display"
        android:background="@color/gray"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_ce"
                style="@style/Button_text"
                android:text="CE" />

            <Button
                android:id="@+id/btn_c"
                style="@style/Button"
                android:text="C"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_del"
                style="@style/Button_text"
                android:text="DEL" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/Button"
                android:text="÷" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_7"
                style="@style/Button"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Button"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/Button"
                android:text="9" />

            <Button
                android:id="@+id/btn_multiply"
                style="@style/Button"
                android:text="×" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_4"
                style="@style/Button"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Button"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/Button"
                android:text="6" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/Button"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_1"
                style="@style/Button"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Button"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Button"
                android:text="3" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/Button"
                android:text="−" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/blank"
                style="@style/Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_0"
                style="@style/Button"
                android:text="0" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/Button"
                android:text="." />

            <Button
                android:id="@+id/btn_equal"
                style="@style/Button"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>